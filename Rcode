colnames(input) <- c("LC1","LC2","LC3","LC4","LC5","LC6","LC7","LC9","LC10","LC11","LC12","LC13","LC14","LC15","LC16","LC17","LC18","LC19","LC20","LF1","LF2","LF3","LF4","LF5","LF6","LF7","LF8","LF9","LF10","LF11","LF12","LF13","LF14","LF15","LF16","LF17","LF18","LF19","LF20","SL3","SL4","SL5","SL6","SL8","SL9","SL10","SL12","SL13","SL14","SL15","SL16","SL17","SL18","SL19","SL20","SL21","SL22","MI1","MI2","MI3","MI4","MI5","MI6","MI7","MI8","MI9","MI10","MI11","MI12","MI13","MI14","MI15","MI16","MI17","MI18","MI19","MI20")
dim(input)

dds.pcoa=pcoa(vegdist(t(input),na.rm=T,method="euclidean"))
scores=dds.pcoa$vectors
head(scores)
# Calculate the percent of variance explained by first two axes
percent <- dds.pcoa$values$Eigenvalues
cumulative_percent_variance <- percent / sum(percent)
cumulative_percent_variance
sum(cumulative_percent_variance[1:2])

##Run both of these bevause adonis adds terms sequentially, notice

adonis2(t(input)~Site,na.rm=T,method="euclidean",permutations = 10000)  

ordiplot(scores,label=T)
ordiellipse(scores,as.factor(Site),label=T)

